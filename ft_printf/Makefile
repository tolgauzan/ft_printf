NAME = libftprintf.a
CC = cc
CFLAGS = -Wall -Wextra -Werror -Iinc
SRC_DIR = src
OBJ_DIR = obj
SRCS = $(SRC_DIR)/ft_printf.c \
       $(SRC_DIR)/ft_utils_str.c \
       $(SRC_DIR)/ft_utils_hex.c \
       $(SRC_DIR)/ft_utils_int.c

OBJS = $(SRCS:$(SRC_DIR)/%.c=$(OBJ_DIR)/%.o)

all: $(NAME)

$(NAME): $(OBJS)
	@ar rcs $(NAME) $(OBJS)
	@echo " âœ” ðŸ“š $(NAME) static library created"

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(OBJ_DIR)
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo " âœ” ðŸ“ $@ðŸ“ƒ file created"

clean:
	@rm -rf $(OBJ_DIR)
	@echo " âœ” ðŸ§¹ ðŸ“ Object directory cleaned"

fclean: clean
	@rm -f $(NAME)
	@echo " âœ” ðŸ§¹ ðŸ“š $(NAME) static library cleaned"

re: fclean all
	@echo " âœ” ðŸ› ï¸  Project rebuilded"

.PHONY: all clean fclean re